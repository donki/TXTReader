<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:TXTReader.Controls"
             x:Class="TXTReader.TextReaderPage"
             Title="Lector de Texto"
             BackgroundColor="#F8F9FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Search Toolbar -->
        <Frame Grid.Row="0" 
               BackgroundColor="White" 
               CornerRadius="0" 
               Padding="0" 
               HasShadow="True">
            <Frame BackgroundColor="#F8F9FA" 
                   CornerRadius="22" 
                   Padding="0" 
                   HasShadow="False"
                   Margin="15,10">
                <Entry
                    x:Name="SearchEntry"
                    Placeholder="🔍 Buscar en el texto..."
                    FontSize="14"
                    BackgroundColor="Transparent"
                    Margin="15,0"
                    TextChanged="OnSearchTextChanged" />
            </Frame>
        </Frame>

        <!-- Content Area with Zoom Slider -->
        <Grid Grid.Row="1" Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Zoom Slider (Vertical) -->
            <Frame Grid.Column="0" 
                   BackgroundColor="White" 
                   CornerRadius="25" 
                   Padding="5" 
                   HasShadow="True"
                   Margin="0,20,5,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Zoom In Icon -->
                    <Label Grid.Row="0" 
                           Text="A+" 
                           FontSize="12" 
                           FontAttributes="Bold"
                           TextColor="#3498DB" 
                           HorizontalOptions="Center" 
                           Margin="0,5" />

                    <!-- Vertical Slider -->
                    <Slider Grid.Row="1"
                            x:Name="ZoomSlider"
                            Minimum="8"
                            Maximum="32"
                            Value="14"
                            Rotation="270"
                            WidthRequest="150"
                            HeightRequest="40"
                            ThumbColor="#3498DB"
                            MinimumTrackColor="#3498DB"
                            MaximumTrackColor="#BDC3C7"
                            ValueChanged="OnZoomSliderValueChanged"
                            VerticalOptions="Center"
                            HorizontalOptions="Center" />

                    <!-- Zoom Out Icon -->
                    <Label Grid.Row="2" 
                           Text="A-" 
                           FontSize="12" 
                           FontAttributes="Bold"
                           TextColor="#3498DB" 
                           HorizontalOptions="Center" 
                           Margin="0,5" />
                </Grid>
            </Frame>

            <!-- Text Content -->
            <Frame Grid.Column="1" 
                   BackgroundColor="White" 
                   CornerRadius="0" 
                   Padding="0" 
                   HasShadow="False">
                <controls:SelectableHighlightedTextView
                    x:Name="ContentViewer"
                    FontSize="14"
                    FontFamily="Consolas, Monaco, 'Courier New', monospace"
                    HighlightBackgroundColor="#ffff00"
                    HighlightTextColor="#000000"
                    Foreground="#2C3E50"
                    SearchTerm="{Binding Text, Source={x:Reference SearchEntry}}" />
            </Frame>
        </Grid>

    </Grid>

</ContentPage>